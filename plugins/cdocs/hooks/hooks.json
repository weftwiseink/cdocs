{
  "description": "CDocs frontmatter validation hook",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/cdocs-validate-frontmatter.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
